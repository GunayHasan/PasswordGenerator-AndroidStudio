<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D1D1"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose the password content:"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkUpper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:text="Upper Case"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="36dp"/>

        <CheckBox
            android:id="@+id/checkLower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:text="Lower Case"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkDigits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:text="Digits"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkSpecialChars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:text="Special Characters"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editPassLen"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_edittext"
            android:hint="Enter password size"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:maxLength="2"
            android:maxLines="1"
            android:textAlignment="center"
            android:inputType="number"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonGen"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            android:text="GENERATE"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/textPass"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:padding="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCopy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            android:text="Copy "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>

    </LinearLayout>



</RelativeLayout>